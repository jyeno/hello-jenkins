pipeline {
    agent any

    triggers {
        pollSCM('* * * * *')
    }

    environment {
        NIX_REMOTE = 'daemon'
        NIX_PATH = '/nix/var/nix/profiles/per-user/root/channels'
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    docker.build("hello-world-zig:${env.BUILD_NUMBER}")
                }
            }
        }

        stage('Run') {
            steps {
                script {
                    docker.image("hello-world-zig:${env.BUILD_NUMBER}").inside {
                        sh '/app/hello'
                    }
                }
            }
        }
    }
}
